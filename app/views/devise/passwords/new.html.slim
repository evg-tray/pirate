.center-login
  .page-header.half-top-margin
    h3
      = t('.forgot_your_password')
  .panel.panel-default
    .panel-body
      = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
        = devise_error_messages!
        .form-group.has-feedback.has-feedback-left
          = f.email_field :email, autofocus: true, placeholder: t('devise.email_placeholder'), class: 'form-control'
          i.fa.fa-envelope.form-control-feedback
        .actions
          button.btn.btn-primary.btn-block
            i.fa.fa-send
            |&nbsp
            = t('.send_me_reset_password_instructions')
  .panel.panel-default
    .panel-body
      = render "devise/shared/links"
